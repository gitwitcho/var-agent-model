<info.financialecology.finance.abm.sandbox.TrendValueAbmParams>
<!--
    - Pure price takers (no impact of orders on prices)
    - GeometricBrownian process for prices and values 
    - One trend follower, one fundamental investors
-->
    <nTicks>20000</nTicks>
    <nRuns>30</nRuns>
    <seed>124</seed>
    <numTrends>1</numTrends>
    <numFunds>1</numFunds>
<!-- Parameters of price generator -->
    <shift_price>0</shift_price>
    <amplitude_price>0</amplitude_price>
    <lag_price>0</lag_price>
    <lambda_price>40</lambda_price>
    <mu_price>0</mu_price>
    <sigma_price>0.05</sigma_price>     <!-- Percentage volatility since it is a geometric Brownian process -->
    <price_0>100</price_0>
   <volWindow>100</volWindow>
  <liquidity>99999999</liquidity>
<!-- Parameters of fundamental value generator -->
    <shift_value>0</shift_value>
    <amplitude_value>0</amplitude_value>
    <lag_value>0</lag_value>
    <lambda_value>40</lambda_value>  
    <mu_value>0</mu_value>
    <sigma_value>0.05</sigma_value>
<!-- Parameters of TREND traders -->
    <maShortTicksMin>15</maShortTicksMin>
    <maShortTicksMax>15</maShortTicksMax>
    <maLongTicksMin>40</maLongTicksMin>
    <maLongTicksMax>40</maLongTicksMax>
    <bcTicksTrendMin>10</bcTicksTrendMin>
    <bcTicksTrendMax>10</bcTicksTrendMax>
    <capFactorTrend>1</capFactorTrend>
    <volWindowTrend>20</volWindowTrend> 
<!-- Parameters of FUND traders -->
    <entryThresholdMin>5</entryThresholdMin>
    <entryThresholdMax>5</entryThresholdMax>
    <exitThresholdMin>1</exitThresholdMin>
    <exitThresholdMax>1</exitThresholdMax>
    <valueOffset>0</valueOffset>
    <bcTicksFundMin>1</bcTicksFundMin>
    <bcTicksFundMax>1</bcTicksFundMax>
    <capFactorFund>1</capFactorFund>
</info.financialecology.finance.abm.sandbox.TrendValueAbmParams>